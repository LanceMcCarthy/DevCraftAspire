@page "/"
@using Telerik.ReportViewer.Blazor

@* Helps the ReportViewer prerender and be ready for launch *@
@rendermode InteractiveServer

<style>
    #rv1 {
        position: relative;
        width: 1200px;
        height: 600px;
    }
</style>

<ReportViewer ViewerId="rv1"
              ServiceUrl="@ApiServiceUrl"
              ReportSource="@MyReportSource"
              ScaleMode="@(ScaleMode.Specific)"
              Scale="1.0" />

@code {
    public string ApiServiceUrl { get; set; } = "http://localhost:5423/reports";

    public ReportSourceOptions MyReportSource { get; set; } = new() { Report = "Barcodes Report.trdp" };

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}