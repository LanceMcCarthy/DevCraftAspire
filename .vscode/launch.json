{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Aspire AppHost",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-apphost",
      "program": "${workspaceFolder}/DevCraftAspire.AppHost/bin/Debug/net10.0/DevCraftAspire.AppHost.dll",
      "args": [],
      "cwd": "${workspaceFolder}/DevCraftAspire.AppHost",
      "stopAtEntry": false,
      "console": "internalConsole",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Launch Web Frontend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-web",
      "program": "${workspaceFolder}/DevCraftAspire.Web/bin/Debug/net10.0/DevCraftAspire.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/DevCraftAspire.Web",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Launch API Service",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/DevCraftAspire.ApiService/bin/Debug/net10.0/DevCraftAspire.ApiService.dll",
      "args": [],
      "cwd": "${workspaceFolder}/DevCraftAspire.ApiService",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": "Attach to Process",
      "type": "coreclr",
      "request": "attach"
    }
  ],
  "compounds": [
    {
      "name": "Launch All Services",
      "configurations": ["Launch Web Frontend", "Launch API Service"],
      "stopAll": true
    }
  ]
}
