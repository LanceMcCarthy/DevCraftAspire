@page "/webreportdesigner"

@using Telerik.WebReportDesigner.Blazor
@* CSS for the ReportDesigner *@
<style>
    #wrd1 {
        position: relative;
        width: 1300px;
        height: 880px;
        padding-right: 50px;
    }
</style>
@* Create the WebReportDesignerWidget *@
<WebReportDesigner DesignerId="wrd1"
            ServiceUrl="@ApiServiceUrl"
            Report="BarcodesReport.trdp"
            ReportViewerOptions="@(new ReportViewerOptions() {
                templateUrl = @$"{TemplateString}",
                scaleMode = ScaleMode.Specific,
                scale = 1.0,
                pageMode = PageMode.ContinuousScroll,
                viewMode = ViewMode.Interactive
            })"
            ToolboxArea="new ToolboxAreaOptions() { Layout = ToolboxAreaLayout.List }"
            PropertiesArea="new PropertiesAreaOptions() { Layout = PropertiesAreaLayout.Categorized }" />

         